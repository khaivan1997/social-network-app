<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/profile_email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tung@nguyen.com"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/profile_email_text"
        app:layout_constraintStart_toStartOf="@+id/profile_email_text"
        app:layout_constraintTop_toBottomOf="@+id/profile_email_text"
        android:layout_marginTop="7dp"/>

    <View
        android:id="@+id/divider_1"
        android:layout_width="250dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_email" />

    <TextView
        android:id="@+id/profile_gender_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Gender"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_1" />

    <TextView
        android:id="@+id/profile_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="male"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/profile_gender_text"
        app:layout_constraintStart_toStartOf="@+id/profile_gender_text"
        app:layout_constraintTop_toBottomOf="@+id/profile_gender_text"
        android:layout_marginTop="7dp"/>

    <View
        android:id="@+id/divider_2"
        android:layout_width="250dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_gender" />

    <TextView
        android:id="@+id/profile_description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Description"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_2" />

    <TextView
        android:id="@+id/profile_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keep mysterious air around"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/profile_description_text"
        app:layout_constraintStart_toStartOf="@+id/profile_description_text"
        app:layout_constraintTop_toBottomOf="@+id/profile_description_text"
        android:layout_marginTop="7dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>